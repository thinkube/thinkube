FROM python:3.12-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    git \
    curl \
    vim \
    wget \
    && rm -rf /var/lib/apt/lists/*

# Install JupyterLab and extensions
RUN pip install --no-cache-dir --break-system-packages \
    jupyterlab==4.0.9 \
    ipywidgets==8.1.1 \
    jupyterlab-git==0.50.0 \
    jupyterlab-lsp==5.0.1 \
    python-lsp-server[all]==1.9.0 \
    jupyter-server-terminals==0.5.0

# Install data science packages
RUN pip install --no-cache-dir --break-system-packages \
    numpy==1.26.2 \
    pandas==2.1.4 \
    matplotlib==3.8.2 \
    seaborn==0.13.0 \
    scikit-learn==1.3.2 \
    plotly==5.18.0 \
    scipy==1.11.4

# Install ML/AI packages
RUN pip install --no-cache-dir --break-system-packages \
    transformers==4.36.2 \
    datasets==2.16.1 \
    tokenizers==0.15.0 \
    sentence-transformers==2.2.2 \
    huggingface-hub==0.20.1

# Install utility packages
RUN pip install --no-cache-dir --break-system-packages \
    python-dotenv==1.0.0 \
    requests==2.31.0 \
    boto3==1.34.0 \
    mlflow==2.9.2 \
    litellm==1.17.0 \
    pyyaml==6.0.1 \
    rich==13.7.0

# Create jovyan user (JupyterHub convention)
RUN useradd -m -s /bin/bash -u 1000 jovyan && \
    echo "jovyan ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

# Setup Jupyter configuration
USER jovyan
WORKDIR /home/jovyan

# Create directory structure
RUN mkdir -p /home/jovyan/notebooks \
    && mkdir -p /home/jovyan/scratch \
    && mkdir -p /home/jovyan/datasets \
    && mkdir -p /home/jovyan/models \
    && mkdir -p /home/jovyan/.jupyter

# Configure JupyterLab settings
RUN jupyter lab --generate-config && \
    echo "c.ServerApp.allow_origin = '*'" >> /home/jovyan/.jupyter/jupyter_lab_config.py && \
    echo "c.ServerApp.allow_remote_access = True" >> /home/jovyan/.jupyter/jupyter_lab_config.py && \
    echo "c.ServerApp.ip = '0.0.0.0'" >> /home/jovyan/.jupyter/jupyter_lab_config.py

EXPOSE 8888
CMD ["jupyter", "lab", "--ip=0.0.0.0", "--no-browser", "--allow-root"]