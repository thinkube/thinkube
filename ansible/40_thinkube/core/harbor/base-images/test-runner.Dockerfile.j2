# Simple test runner image - just use python-base since it has pytest
FROM {{ harbor_registry }}/library/python-base:3.12-slim

# Already has everything we need from python-base
WORKDIR /workspace

# Default to running pytest
CMD ["pytest", "-v", "--tb=short"]