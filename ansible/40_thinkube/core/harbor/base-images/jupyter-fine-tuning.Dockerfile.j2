FROM {{ harbor_registry }}/thinkube/jupyter-ml-gpu:latest

USER jovyan

# Install LLM fine-tuning packages
RUN python -m pip install --no-cache-dir --user \
    unsloth \
    bitsandbytes \
    peft \
    trl

