# Thinkube Service Endpoints - Core Infrastructure
# All services use external URLs (DNS → Ingress → TLS → Service → Backend)

# PostgreSQL - Primary relational database
export POSTGRES_HOST=postgres.{{ domain_name }}
export POSTGRES_PORT=5432
export POSTGRES_DB=thinkube
export POSTGRES_USER=tkadmin

# Valkey - Redis-compatible in-memory data store
export VALKEY_HOST=valkey.{{ domain_name }}
export VALKEY_PORT=6379

# Qdrant - Vector database for AI applications
export QDRANT_URL=https://qdrant.{{ domain_name }}
export QDRANT_HOST=qdrant.{{ domain_name }}
export QDRANT_PORT=6333
export QDRANT_GRPC_URL=https://qdrant.{{ domain_name }}:6334
export QDRANT_GRPC_PORT=6334

# OpenSearch - Search and analytics engine
export OPENSEARCH_URL=https://opensearch.{{ domain_name }}
export OPENSEARCH_HOST=opensearch.{{ domain_name }}
export OPENSEARCH_PORT=9200

# ClickHouse - Columnar database for analytics
export CLICKHOUSE_URL=https://clickhouse.{{ domain_name }}
export CLICKHOUSE_HOST=clickhouse.{{ domain_name }}
export CLICKHOUSE_HTTP_PORT=8123
export CLICKHOUSE_NATIVE_PORT=9000

# NATS - Message broker and streaming platform
export NATS_URL=https://nats.{{ domain_name }}
export NATS_HOST=nats.{{ domain_name }}
export NATS_CLIENT_PORT=4222
export NATS_MONITORING_PORT=8222

# Weaviate - Vector database with semantic search
export WEAVIATE_URL=https://weaviate.{{ domain_name }}
export WEAVIATE_HOST=weaviate.{{ domain_name }}
export WEAVIATE_PORT=8080
export WEAVIATE_GRPC_URL=https://weaviate-grpc.{{ domain_name }}
export WEAVIATE_GRPC_HOST=weaviate-grpc.{{ domain_name }}
export WEAVIATE_GRPC_PORT=50051

# SeaweedFS - S3-compatible object storage
export S3_ENDPOINT=https://s3.{{ domain_name }}
export AWS_ENDPOINT_URL=$S3_ENDPOINT

# MLflow - ML experiment tracking and model registry
export MLFLOW_TRACKING_URI=https://mlflow.{{ domain_name }}

# LiteLLM - LLM proxy and unified API
export LITELLM_URL=https://litellm.{{ domain_name }}
export LITELLM_HOST=litellm.{{ domain_name }}
export LITELLM_API_BASE=https://litellm.{{ domain_name }}