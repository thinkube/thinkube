# Thinkube Baremetal SSH Configuration
# Generated by Ansible on {{ ansible_date_time.date }}
# WARNING: DO NOT EDIT THE SECTION BETWEEN BEGIN-THINKUBE-BAREMETAL and END-THINKUBE-BAREMETAL markers

# BEGIN-THINKUBE-BAREMETAL
{% for host in groups['baremetal'] %}
Host {{ host }}
  HostName {{ hostvars[host]['ansible_host'] }}
  User {{ ansible_user_id }}
  IdentityFile {{ ansible_user_dir }}/.ssh/{{ ssh_key_name }}
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null

{% endfor %}
# END-THINKUBE-BAREMETAL